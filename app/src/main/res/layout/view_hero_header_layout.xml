<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    tools:layout_gravity="center_horizontal"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/hero_header_logo_size_expanded"
        android:layout_height="@dimen/hero_header_logo_size_expanded"
        android:src="@drawable/ic_chess"
        android:layout_marginTop="@dimen/hero_header_logo_margin_top_expanded"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/hero_header_title_margin_top_expanded"
        android:textColor="@color/grey_1"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hero_app_bar_tip"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textSize="12sp"
        android:textColor="@color/grey_3"
        android:layout_marginTop="@dimen/hero_header_tips_margin_top_expanded"/>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:src="@drawable/ic_settings"/>

</merge>